{
  "manifest_version": 3,
  "name": "Productive Goose",
  "version": "1.0",
  "description": "A playful goose that encourages taking breaks",
  "permissions": ["tabs", "storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "31": "images/goose31.png",
      "62": "images/goose62.png",
      "124": "images/goose124.png"
    }
  },
  "icons": {
    "31": "images/goose31.png",
    "62": "images/goose62.png",
    "124": "images/goose124.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles.css"],
    "js": ["content.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["images/*", "sounds/*"],
    "matches": ["<all_urls>"]
  }]
}