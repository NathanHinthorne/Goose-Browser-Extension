{
  "manifest_version": 3,
  "name": "Productive Goose",
  "version": "1.0",
  "description": "A playful goose that encourages taking breaks",
  "permissions": ["tabs", "storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/goose16.png",
      "48": "images/goose48.png",
      "128": "images/goose128.png"
    }
  },
  "icons": {
    "16": "images/goose16.png",
    "48": "images/goose48.png",
    "128": "images/goose128.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles.css"],
    "js": ["content.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["images/*", "sounds/*"],
    "matches": ["<all_urls>"]
  }]
}